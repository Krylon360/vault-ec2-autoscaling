{
  "variables": {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "build_instance_profile": "{{env `BUILD_INSTANCE_PROFILE`}}",
    "build_security_group": "{{env `BUILD_SECURITY_GROUP`}}",
    "build_subnet": "{{env `BUILD_SUBNET`}}",
    "build_vpc": "{{env `BUILD_VPC`}}",
    "mirror": "http://releases.ubuntu.com",
    "region": "us-east-1",
    "source_ami": "{{env `BUILD_AMI`}}",
    "version": "{{timestamp}}",
    "virtualization": "hvm",
    "root_storage": "ebs-ssd",
    "base_image": "ubuntu-14.04-base",
    "base_version": "latest"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "ami_description": "Vault AWS PoC Ubuntu 14.04 HVM SSD bastion host image {{user `version`}}",
      "ami_groups": "all",
      "ami_name": "vault-aws-poc-ubuntu-14.04-hvm-ssd-bastion-{{user `version`}}",
      "associate_public_ip_address": true,
      "instance_type": "m3.large",
      "region": "{{user `region`}}",
      "security_group_id": "{{user `build_security_group`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_username": "ubuntu",
      "subnet_id": "{{user `build_subnet`}}",
      "iam_instance_profile": "{{user `build_instance_profile`}}",
      "temporary_key_pair_name": "build-{{user `version`}}",
      "run_tags": {
        "Environment": "build"
      },
      "tags": {
        "Name": "vault-aws-poc-ubuntu-14.04-hvm-ssd-bastion-{{user `version`}}",
        "Purpose": "bastion",
        "Version": "{{user `version`}}",
        "BaseImage": "{{user `base_image`}}",
        "BaseVersion": "{{user `base_version`}}"
      },
      "vpc_id": "{{user `build_vpc`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
